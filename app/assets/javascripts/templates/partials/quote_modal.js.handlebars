<div id="quote-modal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close"
                {{action "closeQuoteModal"}} aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Edit Quote</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <div class="form-group">
            <label for="quote-content" class="col-sm-2 control-label">
              Content
            </label>
            <div class="col-sm-10">
              {{textarea id="quote-content"
                         class="form-control"
                         value=editingQuote.content}}
            </div>
          </div>
          <div class="form-group">
            <label for="quote-justify" class="col-sm-2 control-label">
              Justify
            </label>
            <div class="col-sm-10">
              {{view "select" id="quote-justify"
                              class="form-control"
                              optionLabelPath="content.name"
                              optionValuePath="content.value"
                              content=QUOTE_JUSTIFY
                              value=editingQuote.justify}}
            </div>
          </div>
          <div class="form-group">
            <label for="quote-size" class="col-sm-2 control-label">
              Size
            </label>
            <div class="col-sm-10">
              {{view "select" id="quote-size"
                              class="form-control"
                              content=QUOTE_SIZE
                              value=editingQuote.size}}
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default"
                {{action "closeQuoteModal"}}>Cancel</button>
        <button type="button" class="btn btn-primary"
                {{action "saveQuoteModal"}}>Save</button>
      </div>
    </div>
  </div>
</div>
