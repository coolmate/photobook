<div id="photo-modal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close"
                {{action "closePhotoModal"}} aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Edit Photo</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <div class="form-group">
            <label for="photo-url" class="col-sm-2 control-label">
              URL
            </label>
            <div class="col-sm-10">
              {{input type="text"
                      id="photo-url"
                      class="form-control"
                      value=editingPhoto.url}}
            </div>
          </div>
          <div class="form-group">
            <label for="photo-shape" class="col-sm-2 control-label">
              Shape
            </label>
            <div class="col-sm-10">
              {{view "select" id="photo-shape"
                              class="form-control"
                              optionLabelPath="content.name"
                              optionValuePath="content.value"
                              content=PHOTO_SHAPES
                              value=editingPhoto.shape}}
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default"
                {{action "closePhotoModal"}}>Cancel</button>
        <button type="button" class="btn btn-primary"
                {{action "savePhotoModal"}}>Save</button>
      </div>
    </div>
  </div>
</div>
