{{#if displayError}}
  <div class="alert alert-danger" role="alert">
    {{displayError}}
  </div>
{{/if}}

<form class="form-horizontal">
  <div class="form-group">
    <label for="album-name" class="col-sm-2 control-label">
      Album Name
    </label>
    <div class="col-sm-10">
      {{input type="text" id="album-name" class="form-control" value=name}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary" {{action "save"}}>
        Create Album
      </button>
    </div>
  </div>
</form>
