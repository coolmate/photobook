<div class="container">
  <h1>Sign Up</h1>
  <form class="form-horizontal">
    <div class="form-group">
      <label for="name">Name</label>
      {{input type="text"
              class="form-control"
              id="name"
              value=name
              placeholder="Finn the Human"}}
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      {{input type="email"
              class="form-control"
              id="email"
              value=email
              placeholder="finn@example.com"}}
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      {{input type="password"
              class="form-control"
              id="password"
              value=password
              placeholder="mATheMAtical!"}}
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" {{action "save"}}>Sign Up</button>
    </div>
  </form>
</div>
